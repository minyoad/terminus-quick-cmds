.modal-body
    .form-group
        label Name
        input.form-control(
            type='text', 
            placeholder="Name",
            autofocus,
            [(ngModel)]='command.name', 
        )

    .form-group
        label Text
        textarea.form-control(
            rows=6,
            style="white-space: pre-line",
            placeholder="Text to be sent",
            [(ngModel)]='command.text', 
        )

    .form-group
        label Group
        select.form-control(
            [(ngModel)]='command.group',
        )
            option([value]="null") Ungrouped
            option(*ngFor="let group of allGroups", [value]="group") {{ group }}

    .form-line
        .header
            .title Append '\n'
            .description Automatically append a '\n' char to the end
        toggle(
            [(ngModel)]='command.appendCR',
        )
                    
.modal-footer
    button.btn.btn-outline-primary((click)='save()') Save
    button.btn.btn-outline-danger((click)='cancel()') Cancel
