.modal-body
    .form-group
        label Name
        input.form-control(
            type='text', 
            placeholder="Name",
            autofocus,
            [(ngModel)]='command.name', 
        )

    .form-group
        label Text
        textarea.form-control(
            rows=6,
            style="white-space: pre-line",
            placeholder="Text to be sent",
            [(ngModel)]='command.text', 
        )

    .form-group
        label Group
        select.form-control(
            [(ngModel)]='command.group',
        )
            option([value]="") Ungrouped
            option(*ngFor="let group of allGroups", [value]="group") {{ group }}

    .form-group
        label Shortcut
        .input-group
            input.form-control(
                type='text', 
                placeholder='Click to capture shortcut',
                [(ngModel)]='command.shortcut', 
                (click)='startCaptureShortcut($event)',
                (focus)='startCaptureShortcut($event)',
                [disabled]='isCapturingShortcut',
            )
            .input-group-append
                button.btn.btn-outline-secondary(
                    type='button',
                    (click)='startCaptureShortcut($event)',
                    [class.btn-outline-primary]='isCapturingShortcut',
                )
                    if isCapturingShortcut
                        | Capturing...
                    else
                        | Capture

    .form-line
        .header
            .title Append '\n'
            .description Automatically append a '\n' char to the end
        toggle(
            [(ngModel)]='command.appendCR',
        )
                    
.modal-footer
    button.btn.btn-outline-primary((click)='save()') Save
    button.btn.btn-outline-danger((click)='cancel()') Cancel
